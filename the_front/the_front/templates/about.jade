extends layout

block content
  .row
    .col-sm-10.col-sm-offset-1.text-right
      h1 about
    .col-sm-6.col-sm-offset-3
      h3.text-center mission
      p=info.about
  .row
    form.text-center(action='https://www.paypal.com/cgi-bin/webscr', method='post', target='_top')
      input(type='hidden', name='cmd', value='_donations')
      input(type='hidden', name='business', value='nolafront@gmail.com')
      input(type='hidden', name='lc', value='US')
      input(type='hidden', name='item_name', value='The Front')
      input(type='hidden', name='item_number', value='nolafront@gmail.com')
      input(type='hidden', name='no_note', value='0')
      input(type='hidden', name='currency_code', value='USD')
      input(type='hidden', name='bn', value='PP-DonationsBF:donate-button.png:NonHostedGuest')
      input.support-button(type='image', border='0', name='submit', alt='PayPal - The safer, easier way to pay online!')
      img(alt='', border='0', src='https://www.paypalobjects.com/en_US/i/scr/pixel.gif', width='1', height='1')
    .row
      .col-sm-6.col-sm-offset-3
        hr.dashed.lightGray
    br
  .row
    .col-sm-4.col-sm-offset-2
      h3 front members
      {% for artist in artists %}
      .col-sm-12
        a(href='#{artist.get_absolute_url()}') #{artist.name}
      {% endfor %}
    .col-sm-5.text-center
      img.img-thumbnail(src="#{STATIC_URL}img/TheFront.jpg")
      .col-sm-8.col-sm-offset-2
        br
        hr.dashed
        br
      a(href='#{STATIC_URL}img/floor_plan.pdf', target='_blank', title='Download floorplan pdf')
        img.img-thumbnail(src="#{STATIC_URL}img/floor_plan.png")
        p.accent.small.italic click to download floorplan
  .row
    br
    br
  .row
    .col-sm-8.col-sm-offset-2
      a(href='#faqs', data-toggle='collapse', data-target="#faqs")
        h3.text-center FAQ About How The Front Works
    #faqs.col-sm-8.col-sm-offset-2.collapse
      {% for faq in faqs %}
      .row
        .col-xs-12
          h5 #{faq.topic}:
          p=faq.answer
      {% if not forloop.last %}
      .row
        .col-xs-4.col-xs-offset-4
          hr.dashed
      {% endif %}
      {% endfor %}
