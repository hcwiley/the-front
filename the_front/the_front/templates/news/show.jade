extends layout

block content
  .row
    .col-sm-10.col-sm-offset-1
      h1 #{news.name}
      {% autoescape off %}
      #{news.text}
      {% endautoescape %}
  .row
    .col-sm-10.col-sm-offset-1
      br
  .row
    .col-sm-10.col-sm-offset-1
      {% for image in news_images %}
      .col-sm-4
        img(src="#{image.thumb()}", title="#{image.name}")
      {% endfor %}
