extends layout

block content
  .row
    .col-xs-12.visible-xs
      br
      br
  .row
    .col-sm-12.text-center
      h1 the front
      h5 [an artist collective]
  .row
    .col-sm-12.text-center
      br
  .row
    .col-sm-10.col-sm-offset-1
      .col-sm-4
        h3 artists
        //-hr.dashed
        {% for artist in artists %}
        a(href='#{artist.get_absolute_url()}')
          .col-sm-12.artist-name-image.col-xs-4(style="background-image: url('#{artist.thumb()}')")
            p #{artist.name|lower}
        {% endfor %}
      .col-sm-6.col-sm-offset-2.text-right
        .row
          .col-sm-12
            br
            br
        .row
          .visible-xs
            br
            br
            br
          .col-sm-12
            a(href='/fundraiser')
              img.img-thumbnail(src='#{STATIC_URL}img/bbq-poster.jpg')
            hr
            form.text-right.sm-text-center(action='https://www.paypal.com/cgi-bin/webscr', method='post', target='_top')
              input(type='hidden', name='cmd', value='_donations')
              input(type='hidden', name='business', value='nolafront@gmail.com')
              input(type='hidden', name='lc', value='US')
              input(type='hidden', name='item_name', value='The Front')
              input(type='hidden', name='item_number', value='nolafront@gmail.com')
              input(type='hidden', name='no_note', value='0')
              input(type='hidden', name='currency_code', value='USD')
              input(type='hidden', name='bn', value='PP-DonationsBF:donate-button.png:NonHostedGuest')
              input.support-button(type='image', border='0', name='submit', alt='PayPal - The safer, easier way to pay online!')
              img(alt='', border='0', src='https://www.paypalobjects.com/en_US/i/scr/pixel.gif', width='1', height='1')
        h3.text-right shows
        //-hr.dashed
        {% for article in news %}
        .row
          .col-xs-12
            a(href='#{article.get_absolute_url()}')
              h4 #{article.name|lower}
              {% if forloop.first %}
              p #{article.artists_info|truncatewords:30}
              {% else %}
              p #{article.artists_info|truncatewords:10}
              {% endif %}
              .col-xs-3.pull-right
                img.img-thumbnail(src="#{article.thumb()}")
        {% if not forloop.last %}
        .row
          .col-sm-12
            hr.dashed
        {% endif %}
        {% endfor %}
