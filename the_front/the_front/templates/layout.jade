{% load compressed %}
doctype 5
html(lang="en")
  head
    title=PAGE_TITLE
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    {% compressed_css 'client' %}
    {% compressed_js 'client' %}
    link(rel='icon', type='image/x-icon', href='./images/fav.png')
  body
    header.navbar
      .logo-link
        a(href='/')
          img(src='#{STATIC_URL}img/corner.jpg')
          h1 the front
      nav.navbar(role="navigation")
        .navbar-header
          button(type="button" ,class="navbar-toggle" ,data-toggle="collapse" ,data-target="#bs-navbar-collapse-1")
            span.icon-bar
            span.icon-bar
            span.icon-bar
            span.icon-bar
        #bs-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav
            li.brand
              a(href='/artists') artists
            li.brand
              a(href='/shows') shows
            li.brand
              a(href='/about') about
            li.brand
              a(href='/press') press
            li.brand
              a(href='/links') links
            li.brand
              a(href='/contact') contact
    #content.container
      block content
    footer.col-sm-12
      .row
        li.brand
          a(href='/') home
        li.brand
          a(href='/artists') artists
        li.brand
          a(href='/shows') shows
        li.brand
          a(href='/about') about
        li.brand
          a(href='/press') press
        li.brand
          a(href='/links') links
        li.brand
          a(href='/contact') contact
      .row.info
        p The Front • 4100 St. Claude Avenue • New Orleans, LA 70117 • Saturday & Sunday 12 to 5 pm
      .row
        form.text-center(action='https://www.paypal.com/cgi-bin/webscr', method='post', target='_top')
          input(type='hidden', name='cmd', value='_donations')
          input(type='hidden', name='business', value='nolafront@gmail.com')
          input(type='hidden', name='lc', value='US')
          input(type='hidden', name='item_name', value='The Front')
          input(type='hidden', name='item_number', value='nolafront@gmail.com')
          input(type='hidden', name='no_note', value='0')
          input(type='hidden', name='currency_code', value='USD')
          input(type='hidden', name='bn', value='PP-DonationsBF:donate-button.png:NonHostedGuest')
          input.support-button(type='image', border='0', name='submit', alt='PayPal - The safer, easier way to pay online!', width='200px', height='auto')
          img(alt='', border='0', src='https://www.paypalobjects.com/en_US/i/scr/pixel.gif', width='1', height='1')        
      .row
        .social
          a(href='https://twitter.com/TheFrontNOLA')
            img(src='#{STATIC_URL}img/twitter-black.png')
          a.pull-right(href='http://www.facebook.com/pages/The-Front/103934003034459')
            img(src='#{STATIC_URL}img/facebook-black.png')
