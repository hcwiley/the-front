$blue = #343496;
$white = #fff;
$darkGray = #444;
$lightGray = #ccc;
$accent = #699;

shadow(args...)
   -webkit-box-shadow args
   -moz-box-shadow args
   box-shadow args

radius(args...)
  -webkit-border-radius args
  -moz-border-radius args
  border-radius args

gradient(perc1, perc2, col1, col2)
  background col1
  background: -webkit-linear-gradient(180deg, col1, perc1, col2, perc2)
  background: -moz-linear-gradient(180deg, col1, perc1, col2, perc2)
  background: linear-gradient(180deg, col1 perc1, col2 perc2)

filter(on)
  if on
    filter: url(filters.svg#grayscale); /* Firefox 3.5+ */
    filter: gray; /* IE6-9 */
    -webkit-filter: grayscale(1); /* Google Chrome, Safari 6+ & Opera 15+ */
  else
    filter: none; /* IE6-9 */
    -webkit-filter: grayscale(0); /* Google Chrome, Safari 6+ & Opera 15+ */


*
  font-family Helvetica, sans-serif
  font-weight 300

h1
  font-variant small-caps
  letter-spacing 2px
  font-size 40px

h1,h2,h3,h4,h5,h6
  font-weight 300

p
  font-size 11pt

.italic
  font-style italic
.short
  line-height 13px
.small
  font-size 12px
  font-weight 300
a
  color #445
a:hover
  text-decoration none
  color #666
.white-shadow
  radius 2px
  background-color #fff
  shadow 0px 0px 35px rgba(0,0,0,0.3)
hr
  border-color $accent
hr.dashed
  border-style dashed
.lightGray
  border-color $lightGray
  color $lightGray
.white
  border-color $white
  color $white
.accent
  color $accent
.bg-accent
  background $accent

