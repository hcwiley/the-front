  border-left none
  border-right none
  padding 0px
  margin 45px 0px 20px 0px
  height 30px
  width 100%
  padding-left 100px
  radius(0px)
  .logo-link
    display inline-block
    background #fff
    background-image url('../img/bg.png')
    margin-top -38px
    height 150px
    width 160px
    shadow(0px, 1px, 5px #777)
    font-variant small-caps
    text-align center
    *
      display inline-block
    img
      border-bottom 2px solid #666
    h1
      margin-top -10px
      font-size 34px
      padding-top 0px
  nav.navbar
    display block
    padding 0px
    radius(0px)
    float none
    margin -100px auto 0px auto
    height 30px
    width 460px
    .navbar-header
      margin-left 160px
